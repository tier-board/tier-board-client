{
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "jest": true,
      "es6": true
    },
    "globals": {
      "err": true,
      "req": true,
      "res": true,
      "next": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "off",
      "indent": [ "error", 2 ],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }],
      "comma-dangle": ["error", "always-multiline"],
      "semi": [ "error", "always" ],
      "no-unused-vars": [1, { "vars": "local", "args": "none" }]
    }
  }